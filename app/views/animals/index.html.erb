<p id="notice"><%= notice %></p>

<h1>Listing Animals</h1>
<div class="media">
 <div class="media-body">
	<table class="table table-hover">
  <thead>
    <tr>
      <th>Name</th>
      <th>Type of animal</th>
      <th>Breed</th>
      <th>Age</th>
      <th>Weight</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @animals.each do |animal| %>
      <tr>
        <td><%= animal.name %></td>
        <td><%= animal.type_of_animal %></td>
        <td><%= animal.breed %></td>
        <td><%= animal.age %></td>
        <td><%= animal.weight %></td>
        <td><%= link_to 'Show', animal %></td>
        <td><%= link_to 'Edit', edit_animal_path(animal) %></td>
        <td><%= link_to 'Destroy', animal, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
</div>
<br>

<%= link_to 'New Animal', new_animal_path %>
